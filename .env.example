# ================================================
# GATEWAY AUTHENTICATION
# ================================================
# Mode: "token" (recommended) or "password"
GATEWAY_AUTH_MODE=token

# Token-based authentication (recommended)
# Generate a secure random token (256-bit minimum)
OPENCLAW_GATEWAY_TOKEN=your-random-256-bit-token-here
CLAWDBOT_GATEWAY_TOKEN=your-random-256-bit-token-here

# OR Password-based authentication (not recommended)
OPENCLAW_GATEWAY_PASSWORD=your-strong-password-here
CLAWDBOT_GATEWAY_PASSWORD=your-strong-password-here

# ================================================
# TAILSCALE AUTH (optional)
# ================================================
# Enable Tailscale Serve authentication
GATEWAY_TAILSCALE_MODE=serve

# ================================================
# AI PROVIDER CREDENTIALS
# ================================================
# OpenAI
OPENAI_API_KEY=sk-...

# Anthropic
ANTHROPIC_API_KEY=sk-ant-...

# Google (Gemini)
GOOGLE_API_KEY=...

# AWS Bedrock
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# ================================================
# MESSAGING PLATFORMS
# ================================================
# Discord
DISCORD_BOT_TOKEN=...

# Telegram
TELEGRAM_BOT_TOKEN=...

# WhatsApp (via Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_FROM=whatsapp:+17343367101

# Signal
SIGNAL_SENDER_NUMBER=+1234567890

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_APP_TOKEN=xapp-...

# ================================================
# SECURITY SETTINGS
# ================================================
# Exec tool security mode: deny, allowlist, full
OPENCLAW_BASH_SECURITY=allowlist

# Enable elevated permissions (use with caution!)
OPENCLAW_ELEVATED_ENABLED=false

# Trusted proxy IPs (for X-Forwarded-For headers)
GATEWAY_TRUSTED_PROXIES=127.0.0.1,::1

# ================================================
# RATE LIMITING (if implemented)
# ================================================
# Requests per 15 minutes per IP
GATEWAY_RATE_LIMIT_MAX=100

# ================================================
# LOGGING & MONITORING
# ================================================
# Log level: trace, debug, info, warn, error
LOG_LEVEL=info

# Enable audit logging
AUDIT_LOG_ENABLED=true

# ================================================
# DEVELOPMENT
# ================================================
# Enable development mode (disables some security checks)
NODE_ENV=development
